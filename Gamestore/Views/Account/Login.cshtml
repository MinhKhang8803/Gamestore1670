@model Gamestore.Areas.Admin.Models.Users
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <title>Gaming Login Form Responsive Widget Template  :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Gaming Login Form Widget Tab Form,Login Forms,Sign up Forms,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
</head>

<body>
    <div class="padding-all">
        <div class="header">
            <h1><img src="./images/5.png" alt=" "> Gaming Login Form</h1>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            if (ViewBag.LoginStatus != null && ViewBag.LoginStatus == 0)
            {
                <div class="alert alert-danger" role="alert">
                    <p>Invalid Email or password, Please try it agian.</p>
                </div>
            }
            <div class="design-w3l">
                <div class="mail-form-agile">
                    <form action="#" method="post">
                        @Html.TextBoxFor(model => model.UserEmail, new { @id = "UserEmail", @class = "form-control rounded", @placeholder = "Your Email" })                       
                        @Html.TextBoxFor(model => model.UserPassword, new { @id = "UserPassword", @class = "form-control rounded", @placeholder = "Password" })
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                    </form>
                </div>
                <div class="clear"> </div>
            </div>
        }

    <div class="footer">
        <p>Don't have an account? <a href="/Account/Register" class="signup-image-link">Create an account</a></p>
    </div>
    </div>
</body>
</html>