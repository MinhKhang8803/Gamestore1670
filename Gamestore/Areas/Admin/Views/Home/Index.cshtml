@model IEnumerable<Gamestore.Areas.Admin.Models.Game>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="courses-area">
    <div class="container-fluid">
        <h4>All Product</h4>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                    <div class="courses-inner res-mg-b-30">
                        <div class="courses-title">
                            <img src="@Html.DisplayFor(modelItem => item.ImageURL)" alt="">
                            <h2>@Html.DisplayFor(modelItem => item.GameName)</h2>
                        </div>
                        <div class="courses-alaltic">
                            <span class="cr-ic-r"><span class="course-icon">Release Date:<i class="fa fa-clock"></i></span> @Convert.ToDateTime(item.CreatedDate).ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="courses-alaltic">
                            <span class="cr-ic-r"><span class="course-icon">Price: <i class="fa fa-dollar"></i></span>@Html.DisplayFor(modelItem => item.Price)</span>
                        </div>
                        <div class="courses-alaltic">
                            <span class="cr-ic-r"><span class="course-icon">Stock:</span>@Html.DisplayFor(modelItem => item.Stock)</span>
                        </div>
                        <div class="courses-alaltic">
                            <span class="cr-ic-r"><span class="course-icon">Category:</span>@Html.DisplayFor(modelItem => item.Category.CategoryID)</span>
                        </div>
                        <div class="course-des">
                            <p><span><i class="fa fa-clock"></i></span> <b>Short Description:</b> @Html.DisplayFor(modelItem => item.ShortDescription)</p>
                            <p><span><i class="fa fa-clock"></i></span> <b>Game Description:</b> @Html.DisplayFor(modelItem => item.GameDescription)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

